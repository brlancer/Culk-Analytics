# dlt Secrets Configuration
# Copy this file to secrets.toml and fill in your actual credentials
# NEVER commit secrets.toml to version control

# PostgreSQL Database Connection
[destination.postgres]
credentials = "postgresql://postgres:INSERT_PASSWORD@localhost:5432/culk_db"

# Shopify Commerce Hub (B2B + DTC)
# Admin API access token with read permissions for orders, products, customers
[sources.shopify]
access_token = "shpat_INSERT_KEY_HERE"
shop_url = "your-store.myshopify.com"

# ShipHero 3PL (Inventory & Fulfillment)
# GraphQL API - requires OAuth tokens
[sources.shiphero]
access_token = "INSERT_KEY_HERE"
refresh_token = "INSERT_KEY_HERE"

# Faire Wholesale Platform
# API v2 access token (starts with fav2_)
[sources.faire]
access_token = "fav2_INSERT_KEY_HERE"

# Loop Returns Platform
# Production API key (starts with sk_prod_)
[sources.loop_returns]
api_key = "sk_prod_INSERT_KEY_HERE"

# Meta/Facebook Ads
# Graph API access token and Ad Account ID
[sources.facebook_ads]
access_token = "EAABxxxxxxxx"
account_id = "act_xxxxxxxxx"

# Google Ads
# Requires OAuth credentials and customer ID
[sources.google_ads]
developer_token = "INSERT_KEY_HERE"
client_id = "INSERT_KEY_HERE.apps.googleusercontent.com"
client_secret = "INSERT_KEY_HERE"
refresh_token = "1//INSERT_KEY_HERE"
customer_id = "xxx-xxx-xxxx"

# Airtable Product Master Data
# Personal access token and base ID
[sources.airtable]
api_key = "keyINSERT_KEY_HERE"
base_id = "appINSERT_KEY_HERE"
